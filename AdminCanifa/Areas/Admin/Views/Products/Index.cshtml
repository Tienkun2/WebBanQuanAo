@model List<AdminCanifa.Models.Cloth>
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}


<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.0/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý sản phẩm </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm mới</a>
                <a href="/admin/product/delete" class="btn btn-danger">Xoá</a>
            </div>
        </div>
        <div class="card-body">

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var page = ViewBag.Page ?? 1;
                        var size = ViewBag.Size ?? 10;
                        var i = ((page - 1) * size) + 1;
                        foreach (var item in Model)
                        {
                            
                            <tr id="trow_@item.ClothesID">
                                <td><input type="checkbox" class="cbkItem" value="@item.ClothesID" /></td>
                                <td>@i</td>
                                <td>
                                    <img src ="#" />
                                </td>
                                <td>@item.ClothesName</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.Price</td>
                                <td>@item.CreatedAt</td>
                                <td class="text-center">
                                    <a href="#" data-id="@item.ClothesID" class="btnActive"></a>
                                </td>
                                <td>
                                    <a href="/admin/products/edit/@item.ClothesID" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.ClothesID" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>




        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
@section scripts{
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            // Hiển thị form upload ảnh
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: 600,
                width: 700,
                resizable: true,
                title: 'Quản lý ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });

            $('body').on("click", ".imgproduct", function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/admin/ProductImage/Index?Id=" + proid);
                $("#dialog").dialog("open");
                return false;
            });





            $('body').off('click', '.btnDelete').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có chắc muốn xóa danh mục này không?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/news/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });

            $('body').off('click', '.btnDelete').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có chắc muốn xóa danh mục này không?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/products/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

        });
    </script>
}

