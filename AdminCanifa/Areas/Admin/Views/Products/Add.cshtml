    <script>

    function loadClothingStyles() {
        var clothingTypeId = $('#ClothingTypeID').val();
        $.ajax({
            url: '@Url.Action("GetClothingStyles", "Products")',
            type: 'POST',
            data: { clothingTypeId: clothingTypeId },
            success: function (data) {
                var $clothingStyle = $('#ClothingStyleID');
                $clothingStyle.empty();
                $clothingStyle.append('<option value="">-- Chọn phong cách đồ --</option>');
                $.each(data, function (i, style) {
                    $clothingStyle.append('<option value="' + style.ClothingStyleID + '">' + style.ClothingStyleName + '</option>');
                });
            },
            error: function (xhr, status, error) {
                console.log("Error: " + error);
            }
        });
    }   




